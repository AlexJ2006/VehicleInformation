using System.Runtime.CompilerServices;
using System.Runtime.InteropServices;
using System.Runtime.InteropServices.Marshalling;
void insertBreak()
{
    Console.WriteLine("");
}

insertBreak();
Console.Write("How many cars would you like to ADD to the system?: ");
string i = Console.ReadLine()!;
int iterations = Convert.ToInt32(i);


List<Car> carList = new List<Car>();

//Trying to allow for iterations, meaning the user can add many different cars to the system at the same time.
while (iterations > 0)
{
    for (int j = 0; j < iterations; j++)
    {
        Console.Write($"PLease enter the MODEL of the car {j + 1}: ");
        string carModel = Console.ReadLine()!;
        Console.Write($"Please enter the PLATE of the car {j + 1}: ");
        string carPlate = Console.ReadLine()!;
        Console.Write($"Please enter the YEAR OF MANUFACTURE of the car {j + 1}:");
        string carYoM = Console.ReadLine()!;
        int carYearOfManufacture = Convert.ToInt32(carYoM);
        insertBreak();

        // carList.Add(Car.carModel);
        // carList.Add(carPlate);
        // carList.Add(carYearOfManufacture);
    }
    Console.WriteLine("Loop terminated");
}

List<Car> carAgeOrder = carList.OrderBy(car => car.yearOfManufacture).ToList();

foreach (Car car in carAgeOrder)
{
    Console.WriteLine(car.yearOfManufacture);
}
class Car
{
    public string make;

    public string plate;

    public int yearOfManufacture;
}




